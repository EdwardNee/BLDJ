<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:drawableLeft="@drawable/ic_arrow"
            android:text="Справка"
            android:textAllCaps="false"
            android:textSize="24dp"
            android:gravity="start|center"
            android:drawablePadding="22dp"
            android:background="@android:color/transparent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp" />

    <View
            android:id="@+id/line_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_button"
            android:layout_width="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="24dp"
            android:layout_height="1dp"
            android:background="#b6b6b6" />

    <TextView
            android:id="@+id/version"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Версия 1.2.3"
            android:textSize="11sp"
            android:layout_marginTop="22dp"
            android:gravity="center_horizontal" />

    <ImageView
            android:id="@+id/logo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/version"
            android:src="@drawable/logo_icon"
            android:layout_marginTop="31dp"
            android:layout_marginStart="42dp" />

    <ImageView
            android:id="@+id/bldj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/logo_icon"
            app:layout_constraintTop_toTopOf="@id/logo_icon"
            android:layout_marginTop="11dp"
            android:src="@drawable/ic_bldj"
            android:layout_marginStart="11dp" />

    <TextView
            android:id="@+id/find_travellers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/logo_icon"
            app:layout_constraintTop_toBottomOf="@id/bldj"
            android:text="Найти попутчиков"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="32dp" />

    <TextView
            android:id="@+id/text_developers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_travellers"
            android:layout_marginTop="217dp"
            android:text="Команда разработчиков:"
            android:textSize="14sp"
            android:gravity="center_horizontal" />

    <TextView
            android:id="@+id/nikita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_developers"
            android:text="Никита Федоров"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="11dp" />

    <TextView
            android:id="@+id/andrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nikita"
            android:text="Андрей Петропавловский"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />

    <TextView
            android:id="@+id/daniil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/andrey"
            android:text="Даниил Ефимов"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />

    <TextView
            android:id="@+id/eduard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/daniil"
            android:text="Эдуард Ни"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />

    <ImageButton
            android:id="@+id/telegram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/eduard"
            android:layout_marginStart="140dp"
            android:src="@drawable/telegram_icon"
            android:background="@drawable/roundcorner"
            android:layout_marginTop="22dp" />

    <ImageButton
            android:id="@+id/google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/telegram"
            app:layout_constraintTop_toBottomOf="@id/eduard"
            android:src="@drawable/google_icon"
            android:layout_marginStart="19dp"
            android:background="@drawable/roundcorner"
            android:layout_marginTop="22dp" />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/google"
            app:layout_constraintTop_toBottomOf="@id/eduard"
            android:layout_marginStart="19dp"
            android:src="@drawable/discord_icon"
            android:background="@drawable/roundcorner"
            android:layout_marginTop="22dp" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_begin="205dp"
            android:orientation="vertical" />

</androidx.constraintlayout.widget.ConstraintLayout>